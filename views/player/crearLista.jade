extends ../templates/default

block content
  div(class='row')
    div(class='col-md-6 col-md-offset-3')
      div(class='panel panel-default')
        div(class='panel-heading')= 'Crear Lista'
        div(class='panel-body')
          form(action='http://localhost:3000/player/misListas/crearLista' method='post')
            div(class='form-group')
              label(for="NombreLista")= 'Nombre de lista'
              input(type='nombre' name='nombreLista' id='nombreLista' placeholder='Nombre de Lista' class='form-control')
            button(type="submit" class='btn btn-default')= 'Crear Lista'
